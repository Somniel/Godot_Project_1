[rules]
max-line-length = 100

class-definitions-order = [
    "signals",
    "enums",
    "constants",
    "exported-variables",
    "public-variables",
    "private-variables",
    "onready-variables",
    "optional-built-in-virtual-methods",
    "built-in-virtual-methods",
    "signal-handlers",
    "public-methods",
    "private-methods",
    "static-methods",
    "optional-subclasses"
]

# Disable rules that conflict with project conventions (uncomment as needed)
# disable = ["max-line-length"]
